kubectl run redis-storage-beni --image=redis:alpine --dry-run=client -oyaml > redis-storage-beni.yaml

------------------------------------
apiVersion: v1
kind: Pod
metadata:
  labels:
    run: redis-storage-beni
  name: redis-storage-beni
spec:
  containers:
  - image: redis:alpine
    name: redis-storage-beni
    volumeMounts:
    - mountPath: /data/redis
      name: temp-volume
  volumes:
  - name: temp-volume
    emptyDir: {}
