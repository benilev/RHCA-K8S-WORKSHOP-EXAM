mountPath: /data
persistentVolumeClaim Name: my-pvc

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: my-pvc
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
       storage: 10Mi
       
  
  ------
apiVersion: v1
kind: Pod
metadata:
  labels:
    run: use-pv
  name: use-pvspec-beni
spec:
  containers:
  - image: nginx
    name: use-pv
    volumeMounts:
    - mountPath: "/data"
      name: mypd
  volumes:
    - name: mypd
      persistentVolumeClaim:
      claimName: my-pvc
      
      
 kubectl create -f /root/use-pv.yaml     
